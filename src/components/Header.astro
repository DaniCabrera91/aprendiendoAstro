---
import Counter from './Counter';
import HeaderButton from './HeaderButton.astro';
---
<!-- el transition:persist es muy interesante por ejemplo para carrito de una tienda donde nos interesa que 
 persista durante la navegacion -->
<header transition:persist class="py-8 px-4 mx-auto max-w-xl lg:py-16 lg:px-6">
    <div class="mx-auto text-center mb-8 lg:mb-16">
	    <h2 class="mb-4 text-5xl tracking-tight font-extrabold text-white">
            Aprendiendo Astro
        </h2>
        <p class="font-light text-gray-500 sm:text-xl dark:text-gray-400">
            Peque√±a app de practica para aprender Astro, un framework de desarrollo web moderno. 
        </p>
    </div>

<!-- Por defecto es estatico counter, para que sea interactivo debemos indicarle una directiva con el client donde
 le decimos como tiene que cargar (Normalmente usaremos cuando sea visible) -->

    <Counter client:visible />

    <nav class="flex flex-col items-center justify-between w-full text-center md:flex-row">
        <!--  La escala empieza en 100 hacia arriba al no poder escribirse numeros negativos -->
        <HeaderButton class="text-white" href="/">
            <svg
                slot="before"  
                width="24"  
                height="24"  
                viewBox="0 0 24 24"  
                fill="none"  
                stroke="currentColor"  
                stroke-width="2"  
                stroke-linecap="round"  
                stroke-linejoin="round"  
            >
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                <path d="M14.972 3.483c.163 .196 .247 .46 .413 .987l3.64 11.53a15.5 15.5 0 0 0 -4.352 -1.42l-2.37 -7.723a.31 .31 0 0 0 -.296 -.213a.31 .31 0 0 0 -.295 .214l-2.342 7.718a15.5 15.5 0 0 0 -4.37 1.422l3.657 -11.53c.168 -.527 .251 -.79 .415 -.986c.144 -.172 .331 -.306 .544 -.388c.242 -.094 .527 -.094 1.099 -.094h2.612c.572 0 .858 0 1.1 .094c.213 .082 .4 .217 .545 .39" />
                <path d="M9 18c0 1.5 2 3 3 4c1 -1 3 -3 3 -4q -3 1.5 -6 0" />
            </svg>
            Astro Basics
        </HeaderButton>
        <HeaderButton class="text-white" href="/curiosities">
            <svg  
                slot="before" 
                width="24"  
                height="24"  
                viewBox="0 0 24 24"  
                fill="none"  
                stroke="currentColor"  
                stroke-width="2"  
                stroke-linecap="round"  
                stroke-linejoin="round"  
            >
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                <path d="M6 4h11a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-11a1 1 0 0 1 -1 -1v-14a1 1 0 0 1 1 -1m3 0v18" />
                <path d="M13 8l2 0" /><path d="M13 12l2 0" />
            </svg>
            Curiosidades
        </HeaderButton>

        <HeaderButton class="text-white" href="/blog/mi-primer-articulo">
            <svg  
                slot="before"                width="24"  
                height="24"  
                viewBox="0 0 24 24"  
                fill="none"  
                stroke="currentColor"  
                stroke-width="2"  
                stroke-linecap="round"  
                stroke-linejoin="round"  
            >
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                <path d="M16 6h3a1 1 0 0 1 1 1v11a2 2 0 0 1 -4 0v-13a1 1 0 0 0 -1 -1h-10a1 1 0 0 0 -1 1v12a3 3 0 0 0 3 3h11" />
                <path d="M8 8l4 0" />
                <path d="M8 12l4 0" />
                <path d="M8 16l4 0"/>
            </svg>
            Blog
        </HeaderButton>

        <HeaderButton class="text-white" href="/about">
            <svg 
                slot="before"   
                width="24"
                height="24"
                viewBox="0 0 24 24" 
                fill="none" 
                stroke="currentColor"  
                stroke-width="2"  
                stroke-linecap="round"  
                stroke-linejoin="round"  
            >
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                <path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0" />
                <path d="M12 9h.01" />
                <path d="M11 12h1v4h1" />
            </svg>
            About
        </HeaderButton>
    </nav>
</header>
