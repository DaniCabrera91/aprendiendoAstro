---
 import Header from '../components/Header.astro';
 import './src/styles/global.css'
 import { ViewTransitions } from 'astro:transitions';

 interface Props {
	title: string;
 }
 const { title }: Props = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro Description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- ViewTransitions de astro es útil para transiciones suaves entre páginas.
		Esto permite que las transiciones entre páginas sean más fluidas y visualmente atractivas
		Importante importar el componente ViewTransitions en el head de tu layout y hacer el import en la parte de js de tu layout
		   -->
		<ViewTransitions />
	</head>
	<body class="bg-gray-900 min-h-screen pb-32">
		<Header />
		<main class="max-w-5xl px-4 m-auto">
			<slot />
		</main>
	</body>
</html>

<style is:global>
	html {
		font-family: system-ui, sans-serif;
		background: #13151a; /* Fondo oscuro */
		background-size: 224px; /* Tamaño del fondo */
		color-scheme: dark light; /* Soporte para modo oscuro y claro */
	}
</style>	